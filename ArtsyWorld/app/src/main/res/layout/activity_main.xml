<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.artsyworld.artsyworld.MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background2"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/maintext"
        android:text="ARTSY WORLD"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:id="@+id/address"
        android:text="Address -"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/abc"
        android:text="abcd"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/address"
        android:textSize="10sp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/contact"
        android:text="Contact -"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_above="@id/address"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/contactinfo"
        android:text="123456789"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact"
        android:layout_above="@id/abc"
        android:textSize="10sp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/description"
        android:text="Description -"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_above="@id/contact"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/descriptioninfo"
        android:text="Arts and crafts describes a wide variety of activities involving making things with ones own hands."

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/description"
        android:layout_above="@id/contactinfo"
        android:textSize="10sp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="20dp"/>



    <ImageView
        android:id="@+id/mainimage"
        android:src="@drawable/heart"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/description"
        android:layout_below="@id/maintext"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

</RelativeLayout>